<%= f.text_field :name %>

<% if defined? category_id %>
  <%= f.hidden_field :category_id %>
<% end %>

<% if defined? subject_id %>
  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.hidden_field :subject_id %>
<% end %>

<%= f.submit %>