<div id="header">

  <% if current_user %>

  <div id="header_welcome">
    Welcome <%= current_user.first_name.capitalize %>!
  </div>

      <div>
        <%= link_to "Log-out", logout_path, id: "logout" %>
      </div>
      <div>
        <%= link_to "My Profile", user_path(current_user) %>
      </div>
  <% else %>
      <div>
        <%= link_to "Log-in", login_path, id: "login" %>
      </div>
      <div>
        <%= link_to "Sign-up", new_user_path, id: "signup" %>
      </div>
  <% end %>

  <div>
    <%= link_to "Home", home_path, id: "home" %>
  </div>

<%= link_to("login with facebook!", "/auth/facebook") %>

<% if session[:user_id] %>
  You are logged-in as <%= current_user.username %>
<% end %>
</div>