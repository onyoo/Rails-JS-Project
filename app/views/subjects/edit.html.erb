<% if can? :edit, @subject %>
  <title><%= title("Edit " + @subject.name) %></title>

  <%= render partial: "application/edit_object_instructions", locals: { object: @subject } %>

  <div class="form">

    <%= form_for [@subject.category, @subject], :url => edit_category_subject_path(@subject.category, @subject), remote: true do |f| %>

      <%= render partial: "application/form", locals: {f: f, category_id: @subject.category.id } %>
    <% end %>

  </div>
<% end %>
